<h1>
	<a name="top">Words</a>

		<% if @words != nil %>
			
			<span style="font-weight: normal; font-size: smaller">
				
				(<%= @words.size %>)
				
			</span>
			
		<% end %>
	
</h1>

(<%= link_to 'New Word', new_word_path %>)
	<a href="#bottom" style="margin: 0px 25px;">(To bottom)</a>

<table border="2">
  <tr>
  	<th>Id</th>
    <th>W1</th>
    <th>W2</th>
    <th>W3</th>
    <th>Text ids</th>
    <th>Text</th>
    <th>Lang</th>
    <th>Dbid</th>
    <th>Created at(millsec)</th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= link_to word.id, word %></td>
    <td><%= word.w1 %></td>
    <td><%= word.w2 %></td>
    <td><%= word.w3 %></td>
    <td><%= word.text_ids %></td>
    <td><%= word.text_id %></td>
    <td><%= word.lang_id %></td>
    <td><%= word.dbId %></td>
    <td><%= word.created_at_mill %></td>
    <td><%= link_to 'Destroy', word, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Word', new_word_path %><a href="#top" style="margin: 0px 25px;">(To top)</a>
