<h1>
	Words
	<!-- <a name="top">Words</a> -->

		<% if @words != nil %>
			
			<span style="font-weight: normal; font-size: smaller">
				
				(<%= @words.size %>)
				
			</span>
			
		<% end %>
	
</h1>

(<%= link_to 'New Word', new_word_path %>)
	<a href="#bottom" style="margin: 0px 25px;">(To bottom)</a>

<table border="2">
  <tr>
  	<th><%= link_to 'Id', :controller => "words", :action => "index", :sort => "id" %></th>
    <th><%= link_to 'W1', :controller => "words", :action => "index", :sort => "w1" %></th>
    <th><%= link_to 'W2', :controller => "words", :action => "index", :sort => "w2" %></th>
    <th><%= link_to 'W3', :controller => "words", :action => "index", :sort => "w3" %></th>
    <th>Text ids</th>
    <th><%= link_to 'Text', :controller => "words", :action => "index", :sort => "text_id" %></th>
    
    <th>
    	<%= link_to 'Lang', :controller => "words", :action => "index", :sort => "lang" %>
    	<br>
    	    	<form action="/words" method="get">
    	
		    <% if Lang.all.size > 0 %>
		    	<!-- <%#= select(
		    				"keyword",
		    				"category_id",
		    				Category.all.collect {|g| [g.name, g.id]}) %> -->
		    	
		    	<!-- REF include_blank http://railsdoc.com/references/select -->
		    	<!-- REF selected http://stackoverflow.com/questions/623458/rails-select-helper-default-selected-value-how answered Mar 10 '09 at 6:06 -->
		    	<%= select(
		    				"text",
		    				"lang_id",
		    				Lang.all.collect {|lang| [lang.name, lang.id]},
		    				:include_blank => true,
		    				:selected => (
		    						params[:text] && params[:text][:lang_id] != "" ?
		    							params[:text] && params[:text][:lang_id] : false)
		    				) %>
		    <% else %>
		    
		    	<b>No data</b>
		    	
		    <% end %>
		    
		    <input type="submit" value="Filter"
						id="filter_lang"
						name="filter_lang" />
		</form>

    </th>
    <th>Dbid</th>
    <th>Created at(millsec)</th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= link_to word.id, word %></td>
    <td><%= word.w1 %></td>
    <td><%= word.w2 %></td>
    <td><%= word.w3 %></td>
    <td><%= word.text_ids %></td>
    <td><%= word.text_id %></td>
    
    <td>
    	<% if word.lang != nil %>
    		<%= word.lang.name %>
		<% else %>
			No data
		<% end %>
    </td>
    
    <td><%= word.dbId %></td>
    <td><%= word.created_at_mill %></td>
    <td><%= link_to 'Destroy', word, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Word', new_word_path %><a href="#top" style="margin: 0px 25px;">(To top)</a>
