
<% count = 1 %>

<% @word_lists.each do |word_list| %>
  <tr>
    <td><%= link_to word_list.id, word_list %></td>
    <td>
    	<%#= word_list.text_id %>
    	<%= link_to word_list.text_id.to_s,
    			:controller => "texts",
    			:action => "show",
    			:id => word_list.text_id %>
    </td>
    
    <td>
    	<%#= word_list.word_id %>
    	<%= link_to word_list.word_id.to_s,
    			:controller => "words",
    			:action => "show",
    			:id => word_list.word_id %>
    </td>
    
    <td>
        <% if not word_list.lang == nil %>
	    	<%= word_list.lang.name %>
		<% else %>
			<%= word_list.lang_id %>(text.lang => nil)
	    <% end %>
    </td>

    <td><%= word_list.db_id %></td>
    <td><%= word_list.created_at_mill %></td>
    <td><%= word_list.updated_at_mill %></td>
    <td><%= link_to 'Destroy', word_list, confirm: 'Are you sure?', method: :delete %></td>
    
    <td>
    	<% if count % 10 == 0 %>
    		<a href="#bottom">(To bottom)</a> |
    		<a href="#top">(To top)</a>
    	<% end %>
    	<% count += 1 %>
    	
    </td>
  </tr>
<% end %>
</table>
